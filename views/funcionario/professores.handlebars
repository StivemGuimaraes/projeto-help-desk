<head>
    <title>Listas de professores</title>
</head>
<body>
    <header
  class="shadow border-secondary border-bottom py-3 mb-4"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-xl-1">
        <a href="/funcionario" class="text-decoration-none text-white">
          <img class="img-fluid float-start" src="" alt="logo aqui" />
        </a>
      </div>
      <div class="col-md-3 col-sm-11 col-xl-3">
        <a href="/funcionario" class="text-white text-decoration-none">
          <h1 class="text-start fs-2">academy help desk</h1>
        </a>
      </div>
    </div>
  </div>
</header>
<main>
    {{> _msg}}
    {{#if error_mensagem}}
  <div class="container mt-5">
    <div class="row justify-content-center text-center">
      <div class="alert alert-danger w-50">{{error_mensagem}}</div>
    </div>
  </div>
{{/if}}
{{#if aviso_mensagem}}
  <div class="container mt-5">
    <div class="row justify-content-center text-center">
      <div class="alert alert-warning w-50">{{aviso_mensagem}}</div>
    </div>
  </div>
{{/if}}
  {{#each professor}}
  <div class="container w-50">
  <div class="card mt-4 mb-4">
  <h5 class="card-header">{{this.matricula}}</h5>
  <div class="card-body">
    <h5 class="card-title">{{this.usuario}}</h5>
    <p class="card-text mb-1">Senha: {{this.senha}}</p>
    {{#if telefone_residencial}}
    <p class="card-text mb-1">Telefone celular: {{this.telefone_celular}}</p>
    <p class="card-text">Telefone residencial: {{this.telefone_residencial}}</p>
    {{else}}
    <p class="card-text">Telefone celular: {{this.telefone_celular}}</p>
    {{/if}}
    <a href="#" class="btn btn-warning">Alterar</a>
    <a href="#" class="btn btn-danger">Deletar</a>
  </div>
</div>
</div>
  {{/each}}
</main>
</body>
</html>