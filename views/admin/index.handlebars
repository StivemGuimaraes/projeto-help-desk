<head>
  <script defer src="js/animacao_hover.js"></script>
  <title>Admin</title>
  <style>
    #img-hover{ height: 40px; width: 40px; background-image:
    url("img/lista-de-reproducao.png"); background-size: cover; transition:
    0.3s; margin:auto } #img-hover:hover { background-image:
    url("img/lista.gif"); background-size: cover; transition: 1s; }
  </style>
</head>
<header
  class="py-3 fixed-top"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-lg-1">
        <a href="/admin" class="text-decoration-none text-white">
          <img class="img-fluid float-start" src="" alt="logo aqui" />
        </a>
      </div>
      <div class="col-md-5 col-sm-6 col-lg-4">
        <a href="/admin" class="text-white text-decoration-none d-inline-block">
          <h1 class="text-start fs-2">Academy help desk</h1>
        </a>
      </div>
      <div class="col-md-5 col-sm-5 col-lg-7">
        <a
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasScrolling"
          aria-controls="offcanvasScrolling"
          style="cursor: pointer;"
        ><div class="me-0" id="img-hover"></div></a>
      </div>
    </div>
  </div>
  <div
    class="offcanvas offcanvas-end"
    data-bs-scroll="true"
    data-bs-backdrop="false"
    tabindex="-1"
    id="offcanvasScrolling"
    aria-labelledby="offcanvasScrollingLabel"
  >
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Olá,
        {{usuario}}
      </h5>
      <button
        type="button"
        class="btn-close text-reset"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>
    <div class="offcanvas-body">
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a href="/admin" class="btn btn-outline-dark" type="button">Inicio</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/admin/funcionario"
            class="btn btn-outline-dark"
            type="button"
          >Listas de funcionários</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/admin/chamado"
            class="btn btn-outline-dark"
            type="button"
          >Listas de chamados</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a href="" class="btn btn-outline-dark" type="button">Listas de
            relatorios</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/admin/professor"
            class="btn btn-outline-dark"
            type="button"
          >Listas de professores</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/admin/aluno"
            class="btn btn-outline-dark"
            type="button"
          >Listas de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/admin/cadastrar-professor"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de professores</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/admin/cadastrar-aluno"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/admin/cadastrar-funcionario"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de funcionários</a>
        </div>
      </div>
      <div class="row" style="margin-top: 150px;">
        <div class="d-grid gap-2">
          <a href="/" class="btn btn-outline-danger" type="button">Sair</a>
        </div>
      </div>
    </div>
  </div>
</header>
<main class="shadow border-bottom">
  <div class="container-fluid p-0">
    <div class="col-md-12 p-0">
      <img
        class="img-fluid m-0 p-0 shadow border-bottom"
        src="/img/estudante.jpg"
        alt="opa, erro"
        width="110%"
        style="height: 32rem"
      />
    </div>
  </div>
  <div class="container mt-5">
    <div class="row g-5 d-flex justify-content-center">
      <div class="col-md-4 col-lg-4" style="width: 15rem">
        <a href="/admin/funcionario" class="text-decoration-none text-dark"><div
            class="card rounded border-secondary"
          >
            <div class="card-body text-center">
              <img
                src="/img/carteira-de-identidade.png"
                alt=""
                height="40%"
                width="40%"
              />
              <p class="mt-4" style="margin: 0">Funcionários</p>
            </div>
          </div></a>
      </div>
      <div class="col-md-4 col-lg-4" style="width: 15rem">
        <a href="/admin/chamado" class="text-decoration-none text-dark"><div
            class="card rounded border-secondary"
          >
            <div class="card-body text-center">
              <img src="/img/conferencia.png" alt="" height="40%" width="40%" />
              <p class="mt-4" style="margin: 0">Chamados</p>
            </div>
          </div></a>
      </div>
      <div class="col-md-4 col-lg-4" style="width: 15rem">
        <div class="card rounded border-secondary">
          <div class="card-body text-center">
            <img src="\img\documents.png" alt="ola" height="40%" width="40%" />
            <p class="mt-4" style="margin: 0">Relatorios</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container mt-5">
    <div class="row g-5 d-flex justify-content-center mb-5">
      <div class="col-md-4 col-lg-4" style="width: 15rem">
        <a href="admin/professor" class="text-decoration-none text-dark"><div
            class="card rounded border-secondary"
          >
            <div class="card-body text-center">
              <img src="/img/professor.png" alt="" height="40%" width="40%" />
              <p class="mt-4" style="margin: 0">Professores</p>
            </div>
          </div></a>
      </div>
      <div class="col-md-4 col-lg-4" style="width: 15rem">
        <a href="/admin/aluno" class="text-decoration-none text-dark"><div
            class="card rounded border-secondary"
          >
            <div class="card-body text-center">
              <img src="/img/aluna.png" alt="" height="40%" width="40%" />
              <p class="mt-4" style="margin: 0">Alunos</p>
            </div>
          </div></a>
      </div>
    </div>
  </div>
  <div class="container mt-5">
    <div class="row g-5 d-flex justify-content-center mb-5">
      <div class="col-md-4 col-lg-4" style="width: 15rem">
        <a
          href="/admin/cadastrar-professor"
          class="text-decoration-none text-dark"
        ><div class="card rounded border-secondary">
            <div class="card-body text-center">
              <img src="/img/professor.png" alt="" height="40%" width="40%" />
              <p class="mt-4" style="margin: 0">Cadastrar Professores</p>
            </div>
          </div></a>
      </div>
      <div class="col-md-4 col-lg-4" style="width: 15rem">
        <a
          href="/admin/cadastrar-aluno"
          class="text-decoration-none text-dark"
        ><div class="card rounded border-secondary">
            <div class="card-body text-center">
              <img src="/img/aluna.png" alt="" height="40%" width="40%" />
              <p class="mt-4" style="margin: 0">Cadastrar Alunos</p>
            </div>
          </div></a>
      </div>
      <div class="col-md-4 col-lg-4" style="width: 16rem;">
        <a
          href="/admin/cadastrar-funcionario"
          class="text-decoration-none text-dark"
        ><div class="card rounded border-secondary">
            <div class="card-body text-center">
              <img src="/img/carteira-de-identidade.png" alt="" height="64px" />
              <p class="mt-4" style="margin: 0">Cadastrar Funcionários</p>
            </div>
          </div></a>
      </div>
    </div>
  </div>
</main>