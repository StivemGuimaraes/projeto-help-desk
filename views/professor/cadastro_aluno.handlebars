<head>
  <title>Cadastro de aluno</title>
  <script defer src="/js/cadastro_validacao.js"></script>
</head>
<header
  class="shadow fixed-top"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-lg-1">
        <a href="/professor" class="text-decoration-none text-white">
          <img
            class="img-fluid float-start"
            src="/img/logo.png"
            alt="logo aqui"
            width="90px"
            height="90px"
            title="logo"
          />
        </a>
      </div>
      <div class="col-md-5 col-sm-6 col-lg-4">
        <a
          href="/professor"
          class="text-white text-decoration-none d-inline-block"
        >
          <h1 class="text-start fs-2" title="academy help desk">Academy Help
            Desk</h1>
        </a>
      </div>
      <div class="col-md-5 col-sm-5 col-lg-7 text-end">
        <a
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasScrolling"
          aria-controls="offcanvasScrolling"
          style="cursor: pointer; display:inline-block"
        ><div id="img-hover" title="lista de navagação"></div></a>
      </div>
    </div>
  </div>
  <div
    class="offcanvas offcanvas-end shadow"
    data-bs-scroll="true"
    data-bs-backdrop="false"
    tabindex="-1"
    id="offcanvasScrolling"
    aria-labelledby="offcanvasScrollingLabel"
  >
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Olá,
        {{usuario}}
      </h5>
      <button
        type="button"
        class="btn-close text-reset"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>
    <div class="offcanvas-body">
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor"
            class="btn btn-outline-dark"
            type="button"
          >Inicio</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/aluno"
            class="btn btn-outline-dark"
            type="button"
          >Lista de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/chamado"
            class="btn btn-outline-dark"
            type="button"
          >Seus chamados</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/cadastrar-aluno"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/criar-chamado"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de chamados</a>
        </div>
      </div>
      <div class="row mt-5">
        <div class="d-grid gap-2">
          <a href="/" class="btn btn-outline-danger" type="button">Sair</a>
        </div>
      </div>
    </div>
  </div>
</header>
<main style="margin-top: 150px">
 {{> _msg}}
  {{#if error}}
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="alert alert-danger w-50">{{error}}</div>
      </div>
    </div>
  {{/if}}
  <div class="container w-50" style="margin-top: 50px">
    <div class="row justify-content-center mb-5">
      <div class="col-md-12 col-sm-12 col-lg-12">
        <div class="card border border-secondary">
          <div class="card-body">
            <div class="text-center">
              <img src="" alt="logo aqui" class="img-fluid mb-4 mt-4" />
            </div>
            <h2 class="text-center text-dark mb-4">Cadastramento do Aluno</h2>
            <form
              action="/professor/cadastrar-aluno/nova"
              method="POST"
              class="needs-validation"
              novalidate
            >
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    class="form-label"
                    for="floatingInput"
                    style="font-weight: bold"
                  >Digite sua matricula</label>

                  <div class="form-floating mb-4">
                    <input
                      type="number"
                      class="form-control"
                      id="floatingInput"
                      placeholder="user"
                      name="matricula"
                      required
                    />
                    <label for="floatingInput">Digite sua matricula</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite sua matricula
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    class="form-label"
                    for="floatingInput"
                    style="font-weight: bold"
                  >Digite seu usuário</label>

                  <div class="form-floating mb-4">
                    <input
                      type="text"
                      class="form-control"
                      id="floatingInput"
                      placeholder="user"
                      name="usuario"
                      required
                    />
                    <label for="floatingInput">Digite seu usuário</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite seu usuário
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    class="form-label"
                    for="floatingInput"
                    style="font-weight: bold"
                  >Digite sua senha</label>
                  <div class="form-floating mb-4">
                    <input
                      type="password"
                      class="form-control"
                      id="floatingPassword"
                      placeholder="Password"
                      name="senha"
                      required
                    />
                    <label for="floatingPassword">Digite sua senha</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite sua senha
                    </div>
                    <div id="error-password"></div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    class="form-label"
                    for="floatingInput"
                    style="font-weight: bold"
                  >Repita sua senha</label>
                  <div class="form-floating mb-4">
                    <input
                      type="password"
                      class="form-control"
                      id="floatingPassword"
                      placeholder="Password"
                      name="senha2"
                      required
                    />
                    <label for="floatingPassword">Repita sua senha</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, repita sua senha
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <button class="btn btn-outline-primary" type="submit">
                    Cadastrar
                  </button>
                  <a href="/admin"><button
                      type="button"
                      class="btn btn-outline-primary"
                    >
                      Voltar
                    </button></a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>