<head>
  <title>Alteração de senha</title>
  <script defer src="/js/login_validacao.js"></script>
</head>
<header
  class="shadow border-secondary border-bottom mb-4"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-xl-1">
        <a href="/esqueci-senha" class="text-decoration-none text-white">
          <img
            class="img-fluid float-start"
            src="/img/logo.png"
            alt="logo aqui"
            width="90px"
            height="90px"
          />
        </a>
      </div>
      <div class="col-md-3 col-sm-11 col-xl-3">
        <a
          href="/esqueci-senha"
          class="text-white text-decoration-none d-inline-block"
        >
          <h1 class="text-start fs-2">Academy Help Desk</h1>
        </a>
      </div>
    </div>
  </div>
</header>
<main>
  {{#if error}}
    <div class="container mt-5">
      <div class="row justify-content-center text-center">
        <div class="alert alert-danger w-50">{{error}}</div>
      </div>
    </div>
  {{/if}}
  <div class="container w-50" style="margin-top: 50px">
    <div class="row justify-content-center mb-5">
      <div class="col-md-12 col-sm-12 col-lg-12">
        <div class="card border border-secondary shadow">
          <div class="card-body">
            <div class="text-center">
              <img
                src="\img\logo.png"
                alt="logo aqui"
                width="160px"
                height="160px"
              />
            </div>
            <h1 class="h3 mb-3 fw-normal text-center">Alteração de senha</h1>
            <form
              action="/esqueci-senha"
              method="POST"
              class="needs-validation"
              novalidate
            >
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    class="form-label"
                    for="floatingInput"
                    style="font-weight: bold"
                  >Digite sua matrícula</label>

                  <div class="form-floating mb-4">
                    <input
                      type="number"
                      class="form-control"
                      id="matricula"
                      placeholder="user"
                      name="matricula"
                      value="{{dados.matricula}}"
                      required
                    />
                    <label for="floatingInput">Digite sua matrícula</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite sua matricula
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    class="form-label"
                    for="floatingInput"
                    style="font-weight: bold"
                  >Digite sua nova senha</label>
                  <div class="form-floating mb-4">
                    <input
                      type="password"
                      class="form-control"
                      id="floatingPassword"
                      placeholder="Password"
                      name="senha"
                      maxlength="40"
                      value="{{dados.senha}}"
                      required
                    />
                    <label for="floatingPassword">Digite sua nova senha</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite sua senha
                    </div>
                    <div id="error-password"></div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    class="form-label"
                    for="floatingInput"
                    style="font-weight: bold"
                  >Repita sua senha</label>
                  <div class="form-floating mb-4">
                    <input
                      type="password"
                      class="form-control"
                      id="floatingPassword"
                      placeholder="Password"
                      name="senha2"
                      maxlength="40"
                      value="{{dados.senha2}}"
                      required
                    />
                    <label for="floatingPassword">Repita sua senha</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, repita sua senha
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <button class="btn btn-outline-primary" type="submit">
                    Cadastrar nova senha
                  </button>
                  <a href="/"><button
                      type="button"
                      class="btn btn-outline-primary"
                    >
                      Voltar
                    </button></a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>