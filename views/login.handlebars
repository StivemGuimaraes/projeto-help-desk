<head>
  <title>Login</title>
  <script defer src="/js/login_validacao.js"></script>
</head>
<header
  class="shadow border-secondary border-bottom py-3 mb-4"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-xl-1">
        <a href="/" class="text-decoration-none text-white">
          <img class="img-fluid float-start" src="" alt="logo aqui" />
        </a>
      </div>
      <div class="col-md-10 col-sm-11 col-xl-11">
        <a href="/" class="text-white text-decoration-none">
          <h1 class="text-start fs-2">academy help desk</h1>
        </a>
      </div>
    </div>
  </div>
</header>
<main>
  <div class="container" style="margin-top: 130px">
    <div class="row justify-content-center text-center">
      <div class="card w-50 border border-secondary">
        <div class="card-body">
          <form action="/" method="post" class="needs-validation" novalidate>
            <img src="" alt="logo aqui" />
            <h1 class="h3 mb-3 fw-normal">Login</h1>

            <label
              class="form-label"
              for="floatingInput"
              style="margin-right: 545px; font-weight: bold"
            >USUÁRIO</label>

            <div class="form-floating mb-4">
              <input
                type="text"
                class="form-control"
                id="floatingInput"
                placeholder="user"
                required
                name="usuario"
              />
              <label for="floatingInput">Usuário</label>
              <div class="valid-feedback">Validado!</div>
              <div class="invalid-feedback">
                Por favor, digite seu usuário
              </div>
            </div>
            <label
              class="form-label"
              for="floatingInput"
              style="margin-right: 545px; font-weight: bold"
            >SENHA</label>
            <div class="form-floating mb-4">
              <input
                type="password"
                class="form-control"
                id="floatingPassword"
                placeholder="Password"
                required
                name="senha"
              />
              <label for="floatingPassword">Senha</label>
              <div class="valid-feedback">Validado!</div>
              <div class="invalid-feedback">
                Por favor, digite sua senha
              </div>
            </div>

            <div class="row justify-content-start">
              <div class="col-md-1 col-lg-1 col-sm-12">
                <button class="btn btn-outline-primary" type="submit">
                  Entrar
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>